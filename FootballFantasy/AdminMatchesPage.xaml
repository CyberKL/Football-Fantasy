                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Row 1 -->
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Manchester City" HorizontalAlignment="Center" Foreground="White" />
                <TextBlock Grid.Column="1" Grid.Row="0" Text="VS" HorizontalAlignment="Center" Foreground="White"/>
                <TextBlock Grid.Column="2" Grid.Row="0" Text="LiverPool" HorizontalAlignment="Center" Foreground="White"/>
